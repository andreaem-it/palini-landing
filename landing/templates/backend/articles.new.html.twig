<div id="addModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-12">
                        <label for="form_title">Titolo</label>
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="form_title">Descrizione</label>
                        {{ form_widget(form.description) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="form_title">URL Immagine</label>
                        {{ form_widget(form.image_path) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="form_title">URL Link</label>
                        {{ form_widget(form.link) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="form_title">Scadenza</label>
                        {{ form_widget(form.expiration) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.submit) }}
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>